<div class="container">
	<div class="row">
		<div class="input-form">
    		<section id="content">
				<div class="profile-container">
				<h1 class="profile-name">個人情報編集</h1>

				<%= form_for(@user) do |f| %>

				<table class="table">
					<tbody>
						<tr>
							<th>名前</th>
							<th><%= f.text_field :name, autofocus: true, class:"", required:true %></th>
						</tr>
						<tr>
							<th>名前（カナ）</th>
							<th><%= f.text_field :name_kana, autofocus: true, class:"", required:true %></th>
						</tr>
						<tr>
							<th>ニックネーム</th>
							<th><%= f.text_field :nickname, autofocus: true, class:"", required:true %></th>
						</tr>
						<tr>
							<th>性別</th>
							<th><%= f.select :sex,[["男性","0"],["女性","1"]],class:"", required:true %></th>
						</tr>
						<tr>
							<th>生年月日</th>
							<th><%= f.text_field :birth, autofocus: true, class:"", required:true %></th>
						</tr>
						<tr>
							<th>プロフィール<br>画像</th>
							<th><%= attachment_image_tag @user,:image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg", :size => "100x100" %><%= f.attachment_field :image %></th>
						</tr>
					</tbody>
				</table>

				<%= f.submit "個人情報を変更する", class:"" %>

				<% end %>

				</div>

				<div class="">
					<%= link_to "退会する",user_path(@user),class:"click-danger center", method: :delete,data: { confirm: '本当に退会しますか？'} %>
				</div>

			</section>
		</div>
	</div>
</div>