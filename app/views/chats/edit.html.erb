<h1>Chats#edit</h1>
<p>Find me in app/views/chats/edit.html.erb</p>

<div class="container">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">

			<h1>投稿編集</h1>

			<%= form_for(@chat, :url => {controller: "chats",method: "patch",action: "update"}) do |f| %>

			<h4>Opinion</h4>
				<%= f.text_area :text,class:"col-xs-12" %><br>

			<%= f.submit 'Update chat',class:"btn btn-primary col-xs-12" %><br>
			<%= link_to "Destroy", habit_chat_path(@chat),class:" btn-sm btn-danger", method: :delete,data: { confirm: '本当に削除してもよろしいですか？'} %>

			<%= link_to "戻る",habit_chats_path(@chat.habit_id),class:"" %>

			<% end %>
		</div>
	</div>
</div>
