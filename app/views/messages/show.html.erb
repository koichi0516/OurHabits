<div class="container">
	<div class="row">

		<div class="col-xs-12">
			<div class="input-form">
	    		<section id="content">

				<h1>メッセージ詳細</h1>
					<table class="table">
						<tbody>
							<tr>
								<td>
								<%= link_to user_path(@message.user.id) do %>
								<%= attachment_image_tag @message.user,:image, :fill, 100, 100, format: 'jpeg',fallback: "no_image.jpg", :size => "100x100" %>
								<% end %>
								</td>
								<td>
								<h3><%= @message.user.name %></h3>
								</td>
							</tr>
						</tbody>
					</table>

					<h3>件名</h3>
						<p><%= @message.title %></p>
						<br>
					<h3>本文</h3>
						<p><%= @message.body %></p>
						<br>

					<%=link_to "戻る",messages_path,class:"click-action" %>

				</section>
			</div>
		</div>

	</div>
</div>
